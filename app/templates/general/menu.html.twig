{% block stylesheets %}
    <link href="{{ asset('styles/general/menu.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <nav role="navigation">
        <div id="menuToggle">
            <!--
            A fake / hidden checkbox is used as click reciever,
            so you can use the :checked selector on it.
            -->
            <input type="checkbox"/>

            <!--
            Some spans to act as a hamburger.

            They are acting like a real hamburger,
            not that McDonalds stuff.
            -->
            <span></span>
            <span></span>
            <span></span>

            <!--
            Too bad the menu has to be inside of the button
            but hey, it's pure CSS magic.
            -->
            <ul id="menu">
                <a href="{{ path('store', {}, relative = false) }}">
                    <li>Magazin</li>
                </a>
                <a href="{{ path('latest', {}, relative = false) }}">
                    <li>Noua Colectie</li>
                </a>
                <a href="{{ path('favourites', {}, relative = false) }}">
                    <li>Favorite</li>
                </a>
                <a href="{{ path('cart', {}, relative = false) }}">
                    <li>Cos</li>
                </a>
                {% if app.user != null %}
                    <a href="{{ path('user', {}, relative = false) }}">
                        <li>Contul Meu</li>
                    </a>
                    {% for role in app.user.roles %}
                        {% if role == 'ROLE_ADMIN' %}
                            <a href="{{ path('app_panel', {}, relative = false) }}">
                                <li>Admin Panel</li>
                            </a>
                        {% endif %}
                    {% endfor %}
                {% endif %}
                <a href="#">
                    <li>Contact</li>
                </a>
            </ul>
        </div>
    </nav>

    <div class="logo-container">
        <img class="logo" src="{{ asset('assets/images/home/logoSmall.png') }}"
             onclick="window.location.href='{{ path('store', {}, relative = false) }}'">
    </div>
{% endblock %}